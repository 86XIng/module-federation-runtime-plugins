{
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "dist",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2015", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": false,
    "declaration": true,
		"declarationDir": "./dist/types",
    "emitDeclarationOnly": true
  },
  "include": ["src"]
}
